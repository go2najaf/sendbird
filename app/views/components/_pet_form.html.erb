

<%= form_for @newPet, url: pets_path, html: { multipart: true } do |f| %>

 <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
   <div class="field">
    <%= f.label :pet_name %><br />
    <%= f.text_field :pet_name, autofocus: true %>
  </div>
   <div class="field">
    <%= f.label :pet_age %><br />
    <%= f.text_field :pet_age, autofocus: true %>
  </div>

   <div class="field">
    <%= f.label :tpe %><br />
    <%= f.text_field :tpe, autofocus: true %>
  </div>

    <div class="field">
    <%= f.label :about %><br />
    <%= f.text_field :about, autofocus: true %>
  </div>

     <div class="field">
    <%= f.label :weight %><br />
    <%= f.text_field :weight, autofocus: true %>
  </div>

     <div class="field">
    <%= f.label :height %><br />
    <%= f.text_field :height, autofocus: true %>
  </div>

     <div class="field">
    <%= f.label :size %><br />
    <%= f.text_field :size, autofocus: true %>
  </div>

     <div class="field">
    <%= f.label :breed %><br />
    <%= f.text_field :breed, autofocus: true %>
  </div>

     <div class="field">
    <%= f.label :sex  %><br />
    <%= f.text_field :sex, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :spay %><br />
    <%= f.text_field :spay, autofocus: true %>
  </div>

    <div class="field">
    <%= f.label :allergies %><br />
    <%= f.text_field :allergies, autofocus: true %>
  </div>

     <div class="field">
    <%= f.label :medications %><br />
    <%= f.text_field :medications, autofocus: true %>
  </div>

     <div class="field">
    <%= f.label :vaccine %><br />
    <%= f.text_field :vaccine, autofocus: true %>
  </div>


  <div class="actions">
    <%= f.submit "Add Pet" %>
  </div>
<% end %>
